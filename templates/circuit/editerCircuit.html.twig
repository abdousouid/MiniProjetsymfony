{% extends 'base.html.twig' %}
{% block body %}
    {% if app.user %}
    <div class="container">
    <div class="form-group" bis_skin_checked="1">
        <h1>Circuit</h1>
        {{ form_start(form) }}
        {{ form_widget(form) }}
        <button class="btn btn-primary">Modifier</button>

        <div class="container">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Ville</th>
                    <th scope="col">Destination</th>
                    <th scope="col">Duree</th>
                    <th scope="col">Ordre</th>
                    <th scope="col">Actions</th>

                </tr>
                </thead>
                <tbody>
                {% for i in etape %}
                    <tr class="table-success">
                        <th scope="row">{{ i.id }}</th>
                        <td>{{ i.villeetape.getDesVille() }}</td>
                        <td>{{ i.villeetape.getDestVille().getDesDest() }}</td>
                        <td>{{ i.dureeetape }}</td>
                        <td>{{i.ordreetape}}</td>
                        <td><a class="btn btn-danger" href="{{ path('deleteetape',{'id':i.id}) }}"><svg class="bi bi-trash-fill" width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z"/>
                                </svg></a>
                            <a class="btn btn-success" href="{{ path('editeretape',{'id':i.id}) }}"><svg class="bi bi-pencil" width="1.5em" height="1.5em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                    <path fill-rule="evenodd" d="M11.293 1.293a1 1 0 0 1 1.414 0l2 2a1 1 0 0 1 0 1.414l-9 9a1 1 0 0 1-.39.242l-3 1a1 1 0 0 1-1.266-1.265l1-3a1 1 0 0 1 .242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z"/>
                                    <path fill-rule="evenodd" d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 0 0 .5.5H4v.5a.5.5 0 0 0 .5.5H5v.5a.5.5 0 0 0 .5.5H6v-1.5a.5.5 0 0 0-.5-.5H5v-.5a.5.5 0 0 0-.5-.5H3z"/>
                                </svg></a></td>

                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <a class="btn btn-secondary" href="{{ path('ajouteretape') }}"><svg class="bi bi-plus-circle" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M8 3.5a.5.5 0 0 1 .5.5v4a.5.5 0 0 1-.5.5H4a.5.5 0 0 1 0-1h3.5V4a.5.5 0 0 1 .5-.5z"/>
                <path fill-rule="evenodd" d="M7.5 8a.5.5 0 0 1 .5-.5h4a.5.5 0 0 1 0 1H8.5V12a.5.5 0 0 1-1 0V8z"/>
                <path fill-rule="evenodd" d="M8 15A7 7 0 1 0 8 1a7 7 0 0 0 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
            </svg></a>
        {{ form_end(form) }}
    </div>
    {% else %}
        <div class="container">
            <table class="table table-hover">
                <thead>
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Ville</th>
                    <th scope="col">Destination</th>
                    <th scope="col">Duree</th>
                    <th scope="col">Ordre</th>


                </tr>
                </thead>
                <tbody>
                {% for i in etape %}
                    <tr class="table-success">
                        <th scope="row">{{ i.id }}</th>
                        <td>{{ i.villeetape.getDesVille() }}</td>
                        <td>{{ i.villeetape.getDestVille().getDesDest() }}</td>
                        <td>{{ i.dureeetape }}</td>
                        <td>{{i.ordreetape}}</td>


                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
{% endif %}
{% endblock %}