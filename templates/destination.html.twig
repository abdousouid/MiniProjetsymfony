{% extends 'base.html.twig' %}
{% block body %}
<h1>Destinations</h1>
    <section>
    <div class="row">
    {% for i in destinations %}
        <div class="col-md-3 p-3">
    <div class="card border-primary mb-3 " style="max-width: 20rem;" bis_skin_checked="1">
        <div class="card-header" bis_skin_checked="1">{{ i.codeDest }}</div>
        <div class="card-body" bis_skin_checked="1">
            <h4 class="card-title">{{i.desDest}}</h4>
            <img style="height: 200px; width: 100%; display: block;" src="{{ i.img }}"><br>
            {% if app.user %}
            <p class="card-text"><a href="{{ path('editerdestination',{'id':i.id}) }}" class="btn btn-secondary" href="#"><svg class="bi bi-pencil" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M11.293 1.293a1 1 0 0 1 1.414 0l2 2a1 1 0 0 1 0 1.414l-9 9a1 1 0 0 1-.39.242l-3 1a1 1 0 0 1-1.266-1.265l1-3a1 1 0 0 1 .242-.391l9-9zM12 2l2 2-9 9-3 1 1-3 9-9z"/>
                        <path fill-rule="evenodd" d="M12.146 6.354l-2.5-2.5.708-.708 2.5 2.5-.707.708zM3 10v.5a.5.5 0 0 0 .5.5H4v.5a.5.5 0 0 0 .5.5H5v.5a.5.5 0 0 0 .5.5H6v-1.5a.5.5 0 0 0-.5-.5H5v-.5a.5.5 0 0 0-.5-.5H3z"/>
                    </svg></a>&#9;<a href="{{ path('deleteDestination',{'id':i.id}) }}" class="btn btn-secondary"><svg class="bi bi-trash-fill" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M2.5 1a1 1 0 0 0-1 1v1a1 1 0 0 0 1 1H3v9a2 2 0 0 0 2 2h6a2 2 0 0 0 2-2V4h.5a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H10a1 1 0 0 0-1-1H7a1 1 0 0 0-1 1H2.5zm3 4a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7a.5.5 0 0 1 .5-.5zM8 5a.5.5 0 0 1 .5.5v7a.5.5 0 0 1-1 0v-7A.5.5 0 0 1 8 5zm3 .5a.5.5 0 0 0-1 0v7a.5.5 0 0 0 1 0v-7z"/>
                    </svg></a></p>
            {% else %}
                <p class="card-text">
                    <a href="{{ path('editerdestination',{'id':i.id}) }}" class="btn btn-secondary">Ville</a>
                </p>
            {% endif %}
        </div>
    </div>
        </div>

    {% endfor %}
    </div>
    </section>
    {% if app.user %}
    <a href="{{ path('ajouterDestination') }}"><svg class="bi bi-plus-square-fill" width="3em" height="3em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
        <path fill-rule="evenodd" d="M2 0a2 2 0 0 0-2 2v12a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V2a2 2 0 0 0-2-2H2zm6.5 4a.5.5 0 0 0-1 0v3.5H4a.5.5 0 0 0 0 1h3.5V12a.5.5 0 0 0 1 0V8.5H12a.5.5 0 0 0 0-1H8.5V4z"/>
    </svg></a>
    {% else %}
        <a href="{{ path('circuit') }}" class="btn btn-secondary">Les circuits</a>
    {% endif %}

{% endblock %}